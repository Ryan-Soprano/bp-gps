<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main Button Styles -->
    <style name="Button.App" parent="Widget.Material3.Button">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/police_blue</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Clear History Button -->
    <style name="Button.App.Clear" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorError</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="icon">@android:drawable/ic_menu_delete</item>
        <item name="iconSize">16dp</item>
        <item name="iconPadding">4dp</item>
    </style>

    <style name="TextAppearance.App.OfficerCaption" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.SectionTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="TextAppearance.App.EmptyState" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.App.ListItemAddress" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/police_blue</item>
    </style>

    <style name="TextAppearance.App.ListItemDetail" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>