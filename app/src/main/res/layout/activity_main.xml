<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <!-- Manual Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/police_blue"
        android:elevation="4dp"
        app:title="@string/app_name"
        app:titleTextColor="@color/white" />

    <!-- Expandable Favorites Panel -->
    <LinearLayout
        android:id="@+id/favoritesPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/police_blue"
        android:elevation="2dp">

        <!-- Favorites Header (Clickable to expand/collapse) -->
        <LinearLayout
            android:id="@+id/favoritesHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/main_padding"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/favorites_title"
                android:textAppearance="@style/TextAppearance.App.SectionTitle"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/favoritesExpandIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorites_expand"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Favorites Buttons Container (Initially hidden) -->
        <LinearLayout
            android:id="@+id/favoritesButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/main_padding"
            android:visibility="gone">

            <!-- Row 1: LPD, LPSO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="@dimen/button_spacing">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLPD"
                    style="@style/Button.App.Police"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/button_spacing"
                    android:text="@string/location_lpd" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLPSO"
                    style="@style/Button.App.Police"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/button_spacing"
                    android:text="@string/location_lpso" />

            </LinearLayout>

            <!-- Row 2: UMC, Lourdes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="@dimen/button_spacing">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUMC"
                    style="@style/Button.App.Police"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/button_spacing"
                    android:text="@string/location_umc" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLourdes"
                    style="@style/Button.App.Police"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/button_spacing"
                    android:text="@string/location_lourdes" />

            </LinearLayout>

            <!-- Row 3: OLOL, Parish Courthouse -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="@dimen/button_spacing">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOLOL"
                    style="@style/Button.App.Police"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/button_spacing"
                    android:text="@string/location_olol" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnParishCourthouse"
                    style="@style/Button.App.Police"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/button_spacing"
                    android:text="@string/location_parish_courthouse" />

            </LinearLayout>

            <!-- Row 4: City Hall (centered) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCityHall"
                    style="@style/Button.App.Police"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/location_city_hall" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content with padding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/main_padding">

        <!-- Officer Info Section -->
        <TextView
            android:id="@+id/tvOfficerCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caption_officer_none"
            android:textAppearance="@style/TextAppearance.App.OfficerCaption"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/section_spacing"
            tools:text="Officer: 315" />

        <!-- Buttons Container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="@dimen/section_spacing">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditRcn"
                style="@style/Button.App"
                android:layout_marginEnd="@dimen/button_spacing"
                android:text="@string/button_edit_rcn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleFilter"
                style="@style/Button.App"
                android:layout_marginStart="@dimen/button_spacing"
                android:text="@string/button_show_all" />

        </LinearLayout>

        <!-- Recent Addresses Title with Clear Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/title_spacing">

            <TextView
                android:id="@+id/recentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recent_addresses"
                android:textAppearance="@style/TextAppearance.App.SectionTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClearHistory"
                style="@style/Button.App.Clear"
                android:text="@string/button_clear_short" />

        </LinearLayout>

        <!-- List Container with Empty View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- Address List -->
                <ListView
                    android:id="@+id/recentList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="@dimen/list_item_spacing"
                    android:fastScrollEnabled="true"
                    android:scrollbars="vertical"
                    android:listSelector="@android:color/transparent"
                    android:clipToPadding="false"
                    android:paddingTop="@dimen/list_item_spacing" />

                <!-- Empty View -->
                <TextView
                    android:id="@+id/emptyView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/empty_no_dispatches"
                    android:textAppearance="@style/TextAppearance.App.EmptyState"
                    android:gravity="center"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- Load More Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLoadMore"
                style="@style/Button.App"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/main_padding"
                android:text="@string/button_load_more"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>