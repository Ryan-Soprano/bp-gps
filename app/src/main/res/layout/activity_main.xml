<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="12dp" />

    <TextView
        android:id="@+id/tvOfficerCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/caption_officer_none"
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="16dp">

        <Button
            android:id="@+id/btnEditRcn"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/button_edit_rcn" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnToggleFilter"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/button_show_all" />
    </LinearLayout>

    <TextView
        android:id="@+id/recentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recent_addresses"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_no_dispatches"
        android:textColor="?android:attr/textColorSecondary"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/recentList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        android:paddingTop="8dp"
        android:listSelector="@android:color/transparent" />
</LinearLayout>
