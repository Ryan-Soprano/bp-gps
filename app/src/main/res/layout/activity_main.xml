<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true">

    <!-- Manual Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/police_blue"
        android:elevation="4dp"
        app:title="@string/app_name"
        app:titleTextColor="@color/white" />

    <!-- Main Content with padding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/main_padding">

        <!-- Officer Info Section -->
        <TextView
            android:id="@+id/tvOfficerCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caption_officer_none"
            android:textAppearance="@style/TextAppearance.App.OfficerCaption"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/section_spacing"
            tools:text="Officer: 315" />

        <!-- Buttons Container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="@dimen/section_spacing">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditRcn"
                style="@style/Button.App"
                android:layout_marginEnd="@dimen/button_spacing"
                android:text="@string/button_edit_rcn" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleFilter"
                style="@style/Button.App"
                android:layout_marginStart="@dimen/button_spacing"
                android:text="@string/button_show_all" />

        </LinearLayout>

        <!-- Recent Addresses Title with Clear Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/title_spacing">

            <TextView
                android:id="@+id/recentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recent_addresses"
                android:textAppearance="@style/TextAppearance.App.SectionTitle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClearHistory"
                style="@style/Button.App.Clear"
                android:text="@string/button_clear_short" />

        </LinearLayout>

        <!-- List Container with Empty View -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Address List -->
            <ListView
                android:id="@+id/recentList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/transparent"
                android:dividerHeight="@dimen/list_item_spacing"
                android:fastScrollEnabled="true"
                android:scrollbars="vertical"
                android:listSelector="@android:color/transparent"
                android:clipToPadding="false"
                android:paddingTop="@dimen/list_item_spacing" />

            <!-- Empty View -->
            <TextView
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/empty_no_dispatches"
                android:textAppearance="@style/TextAppearance.App.EmptyState"
                android:gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>